---
import logo from "../assets/images/Logo.png";
import luftballon from "../assets/images/luftballon.webp";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---
<header id="mainHeader" class="sticky top-0 z-[110] bg-baggrund border-b border-gray-200 transition-opacity duration-300">
    <div class="container mx-auto px-8 py-4 flex flex-row justify-between items-center">
        <div id="logo">
            <a href="/">
                <img src={logo.src} alt="HØJSKOLENDK" class="h-12" />
            </a>
        </div>
        <button id="menuBtn" class="flex items-center gap-2 text-orange">
            <h4 class="uppercase">MENU</h4>
            <div class="relative w-10 h-7 flex flex-col justify-between">
                <span class="hamburger-line block w-full h-1 bg-orange transition-all duration-300 rounded origin-center"></span>
                <span class="hamburger-line block w-full h-1 bg-orange transition-all duration-300 rounded origin-center"></span>
                <span class="hamburger-line block w-full h-1 bg-orange transition-all duration-300 rounded origin-center"></span>
            </div>
        </button>
    </div>
</header>

<!-- Menu Overlay -->
<div id="menuOverlay" class="fixed inset-0 bg-baggrund z-[100] transition-all duration-800 ease-out" style="clip-path: circle(0% at 95% 2%);">
    <!-- Close button - matches header structure exactly -->
    <div class="absolute top-0 left-0 right-0 z-[120]">
        <div class="container mx-auto px-8 py-4 flex justify-between items-center">
            <div></div> <!-- Spacer to match logo position -->
            <button id="closeBtn" class="flex items-center gap-2 text-orange">
                <h4 class="uppercase">MENU</h4>
                <div class="relative w-10 h-7 flex flex-col justify-between">
                    <span class="close-line block w-full h-1 bg-orange transition-all duration-300 rounded origin-center"></span>
                    <span class="close-line block w-full h-1 bg-orange transition-all duration-300 rounded origin-center"></span>
                    <span class="close-line block w-full h-1 bg-orange transition-all duration-300 rounded origin-center"></span>
                </div>
            </button>
        </div>
    </div>

    <div class="grid md:grid-cols-2 h-full">
        <!-- Left side - Menu text and balloon -->
        <div class="flex flex-col justify-between p-12">
            <h2 class="text-orange font-bold">MENU</h2>
            <div class="flex justify-center items-end pb-12">
                <img src={luftballon.src} alt="Luftballon" class="max-w-2xl w-full animate-float" />
            </div>
        </div>

        <!-- Right side - Navigation links -->
        <div class="flex flex-col justify-center items-end pr-24 space-y-8">
            <nav class="text-right space-y-6">
                <a href="#" class="block text-orange font-bold uppercase hover:underline transition-all duration-300 hover:translate-x-[-10px]">
                    <h3>Højskoleophold</h3>
                </a>
                <a href="#" class="block text-orange font-bold uppercase hover:underline transition-all duration-300 hover:translate-x-[-10px]">
                    <h3>Sommerhøjskole</h3>
                </a>
                <a href="#" class="block text-orange font-bold uppercase hover:underline transition-all duration-300 hover:translate-x-[-10px]">
                    <h3>Om os</h3>
                </a>
                <a href="#" class="block text-orange font-bold uppercase hover:underline transition-all duration-300 hover:translate-x-[-10px]">
                    <h3>Infomøder</h3>
                </a>
                <a href="#" class="block text-orange font-bold uppercase hover:underline transition-all duration-300 hover:translate-x-[-10px]">
                    <h3>Tilmeld</h3>
                </a>
            </nav>

            <!-- Social media -->
            <div class="pt-12">
                <p class="text-orange font-bold text-xl uppercase mb-4">Følg os på<br>sociale medier</p>
                <div class="flex gap-4 justify-end">
                    <!-- Facebook -->
                    <a href="#" class="w-14 h-14 rounded-full border-2 border-orange flex items-center justify-center hover:bg-orange transition-colors" aria-label="Facebook">
                        <svg class="w-6 h-6 fill-orange hover:fill-white" viewBox="0 0 24 24">
