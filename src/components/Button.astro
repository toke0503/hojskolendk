---
// Henter parametrene fra Astro.props
const { variant = "primary", size = "medium" } = Astro.props;

// Base styling for all buttons
const base = "relative inline-flex items-center justify-center overflow-hidden focus:outline-none";

// Variant classes â€” primary will match the attached design (orange box with a darker left accent)
const variantClasses = {
	// primary background is applied via inline style using rgba for 60% opacity
	primary: "text-white font-display uppercase tracking-wider shadow-lg transition-colors",
	outline: "bg-transparent text-black border border-black hover:bg-black hover:text-white",
	secondary: "bg-blue-600 text-white",
};

// Size mappings
const sizeClasses = {
	large: "text-2xl px-10 py-4",
	medium: "text-lg px-8 py-3",
	small: "text-sm px-4 py-2",
};
const isPrimary = variant === 'primary';
---
<!-- Button markup includes an optional left accent bar for the primary variant -->
<button
	class:list={[base, variantClasses[variant], sizeClasses[size]]}
	aria-pressed="false"
	style={isPrimary ? `background-color: rgba(255, 89, 0, 0.6);` : undefined}
	data-hover-style={isPrimary ? `background-color: #ff5900;` : undefined}
	class="hover:has-[:hover]:!bg-[#ff5900]"
>
		<span class="relative z-10"><slot /></span>
</button>