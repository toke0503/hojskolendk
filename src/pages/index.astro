			// Simpel parallax scrolling - kun når sektionen er synlig
			(function() {
				const container = document.getElementById('parallax-container');
				if (!container) {
					console.log('Parallax container ikke fundet');
					return;
				}

				console.log('Parallax initialiseret');

				function updateParallax() {
					const sectionRect = container.getBoundingClientRect();
					const sectionTop = sectionRect.top + window.pageYOffset;
					const scrolled = window.pageYOffset;
					
					// Kun anvend parallax når brugeren er ved sektionen
					if (scrolled > sectionTop - window.innerHeight && scrolled < sectionTop + sectionRect.height) {
						const offset = (scrolled - sectionTop) * 0.3; // 30% langsommere
						// Sørg for at offset aldrig er negativ (forhindrer at billeder går op over headingen)
						const clampedOffset = Math.max(0, offset);
						container.style.transform = `translateY(${clampedOffset}px)`;
					}
				}

				window.addEventListener('scroll', updateParallax, { passive: true });
				updateParallax();
			})();
		</script>

